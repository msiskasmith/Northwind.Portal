@model ProductViewModel

@{
    ViewData["Title"] = "Products";
}

<div class="container p-3">
    <div class = "row pt-4">
        <div class = "col-6">
            <h3 class="text-primary">Products</h3>
        </div>
        <div class = "col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
      </div>
    <hr />
        <table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Product.ProductUnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductUnitsInStock)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductUnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductUnitsInStock)
            </td>

            <td class="text-right">
                <a class="btn btn-secondary" href="/Product/Update?productId=@item.ProductId">Edit</a>
                <a class="btn btn-info" href="/Product/Details?productId=@item.ProductId">View</a>
                <a class="btn btn-danger" href="/Product/Delete?productId=@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
<style>
    tr.even {
    background-color: #F5F5F5 !important;
}
</style>
@section Scripts{

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable()
        });
    </script>
}
