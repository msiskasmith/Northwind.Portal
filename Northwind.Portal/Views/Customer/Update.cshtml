@model Northwind.Portal.Models.CustomerViewModel

@{
    ViewData["Title"] = "Update";
}

<h3>Update Customer</h3>

<hr />
<p>All fields marked with an asterix are required.</p>
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4 form-group d-none">
                    <label asp-for="Customer.CustomerId" class="control-label"></label>
                    <input asp-for="Customer.CustomerId" class="form-control" />
                    <span asp-validation-for="Customer.CustomerId" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Customer.CustomerName" class="control-label"></label>
                    <input asp-for="Customer.CustomerName" class="form-control" />
                    <span asp-validation-for="Customer.CustomerName" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Customer.CustomerContactName" class="control-label"></label>
                    <input asp-for="Customer.CustomerContactName" class="form-control" />
                    <span asp-validation-for="Customer.CustomerContactName" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Customer.CustomerContactTitle" class="control-label"></label>
                    <input asp-for="Customer.CustomerContactTitle" class="form-control" />
                    <span asp-validation-for="Customer.CustomerContactTitle" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Customer.CustomerFax" class="control-label"></label>
                    <input asp-for="Customer.CustomerFax" class="form-control" />
                    <span asp-validation-for="Customer.CustomerFax" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Customer.CustomerAddress" class="control-label"></label>
                    <input asp-for="Customer.CustomerAddress" class="form-control" />
                    <span asp-validation-for="Customer.CustomerAddress" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Customer.CustomerCity" class="control-label"></label>
                    <input asp-for="Customer.CustomerCity" class="form-control" />
                    <span asp-validation-for="Customer.CustomerCity" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Customer.RegionId" class="control-label"></label><br />
                    <select asp-for="Customer.RegionId" 
                        asp-items="@(new SelectList(Model.Regions, nameof(RegionDto.RegionId), nameof(RegionDto.RegionDescription)))">
                        <option>Please select one</option>
                    </select>
                    <span asp-validation-for="Customer.RegionId" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Customer.CustomerPostalCode" class="control-label"></label>
                    <input asp-for="Customer.CustomerPostalCode" class="form-control" />
                    <span asp-validation-for="Customer.CustomerPostalCode" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Customer.CustomerCountry" class="control-label"></label>
                    <input asp-for="Customer.CustomerCountry" class="form-control" />
                    <span asp-validation-for="Customer.CustomerCountry" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Customer.CustomerPhone" class="control-label"></label>
                    <input asp-for="Customer.CustomerPhone" class="form-control" />
                    <span asp-validation-for="Customer.CustomerPhone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> 
                 <a class="btn btn-secondary" type="button" asp-action="Index">Cancel</a>
            </div> 
        </form>

