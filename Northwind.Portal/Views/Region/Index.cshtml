@model RegionViewModel

@{
    ViewData["Title"] = "Regions";
}

<div class="container p-3">
    <div class = "row pt-4">
        <div class = "col-6">
            <h3>Regions</h3>
        </div>
        <div class = "col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>
    <hr />
        <table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Region.RegionDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Regions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegionDescription)
            </td>
            <td class="text-right">
                <a class="btn btn-secondary" href="/Region/Update?regionId=@item.RegionId">Edit</a>
                <a class="btn btn-info" href="/Region/Details?regionId=@item.RegionId">View</a>
                <a class="btn btn-danger" href="/Region/Delete?regionId=@item.RegionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>


<style>
    tr.even {
    background-color: #F5F5F5 !important;
}
</style>
@section Scripts{

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable()
        });
    </script>
}

