@model Northwind.DataModels.Shipment.ShipperDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete a Shipping Company</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShipperName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShipperName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShipperPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShipperPhone)
        </dd>
    </dl>
    
     @using (Html.BeginForm()) {
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-secondary" type="button" asp-action="Index">Cancel</a>
        </div>
        }
</div>
